{{/* this is used to display the author and reader information on single page */}}

{{/* fix - can't evaluate(in `with` below) field Site in type string */}}
{{ $baseURL := .Site.Params.baseURL }}

{{ with .Params.reader_name }}
{{ $url := print $baseURL "/" . ".html" }}

<blockquote>
<p>
{{ with $.Params.author_name }}
作者：{{- . -}}
<br />
{{ end }}
{{ with $.Params.translator_name }}
译者：{{- . -}}
<br />
{{ end }}
朗读者：<a href="{{- $url -}}">{{- $.Params.reader_name -}}</a>
</blockquote>

{{ end }}