{{/* this is used to display the author and reader information on single page */}}

{{ if isset .Params "reader_name" }}
{{ $url := print .Site.Params.baseURL "/" .Params.reader ".html" }}

<blockquote>
{{ if isset .Params "author_name" }}
<p>作者：{{- .Params.author_name -}}
<br />
{{ end }}
<p>朗读者：<a href="{{- $url -}}">{{- .Params.reader_name -}}</a>
</blockquote>

{{ end }}